@{
    ViewData["Title"] = "Kontakt";
}

<div class="section">
    <h2 class="center yellow-text">Skontaktuj się z Bazą</h2>
</div>

<div class="row">
    <div class="col s12 m6">
        <div class="card grey darken-3">
            <div class="card-content">
                <span class="card-title yellow-text">
                    <i class="material-icons">location_on</i> Nasza Baza
                </span>
                <div class="white-text">
                    <p><strong>Galak Pizza HQ</strong></p>
                    <p>ul. Kosmiczna 42</p>
                    <p>00-137 Warszawa</p>
                    <p>Sektor Alfa, Ziemia</p>
                    <br>
                    <p><i class="material-icons tiny">phone</i> +48 137 420 690</p>
                    <p><i class="material-icons tiny">email</i> kapitan@galakpizza.pl</p>
                </div>
            </div>
        </div>

        <div class="card grey darken-3">
            <div class="card-content">
                <span class="card-title yellow-text">
                    <i class="material-icons">schedule</i> Godziny Otwarcia
                </span>
                <table class="white-text">
                    <tr>
                        <td>Poniedziałek - Piątek</td>
                        <td>10:00 - 23:00</td>
                    </tr>
                    <tr>
                        <td>Sobota - Niedziela</td>
                        <td>12:00 - 01:00</td>
                    </tr>
                    <tr>
                        <td>Dni Galaktyczne</td>
                        <td>Non-stop!</td>
                    </tr>
                </table>
            </div>
        </div>
    </div>

    <div class="col s12 m6">
        <div class="card grey darken-3">
            <div class="card-content">
                <span class="card-title yellow-text">
                    <i class="material-icons">message</i> Wyślij Transmisję
                </span>
                <form>
                    <div class="input-field">
                        <input id="name" type="text" class="validate white-text">
                        <label for="name">Twoje Imię</label>
                    </div>
                    <div class="input-field">
                        <input id="email" type="email" class="validate white-text">
                        <label for="email">Adres Email</label>
                    </div>
                    <div class="input-field">
                        <input id="planet" type="text" class="white-text">
                        <label for="planet">Twoja Planeta</label>
                    </div>
                    <div class="input-field">
                        <textarea id="message" class="materialize-textarea white-text"></textarea>
                        <label for="message">Wiadomość do Kapitana</label>
                    </div>
                    <button class="btn btn-galak waves-effect waves-light" type="submit">
                        Wyślij Transmisję
                        <i class="material-icons right">send</i>
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

